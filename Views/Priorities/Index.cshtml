@model IEnumerable<Planny.Models.Priority>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Priorities</h2>

<p>
    @Html.ActionLink("New Priority", "New", "Priorities", null, new { @class = "btn btn-success" })
</p>

@if (!@Model.Any())
{
    <h2>No priorities.</h2>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <th>Name</th>
        </thead>
        <tbody>
        @foreach(var Priority in Model)
        {
            <tr>
                <td>
                    @*@Project.Name*@
                    @Html.ActionLink(@Priority.Name, "Details", "Priorities", new { id = @Priority.Id }, null)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Priorities", new { id = @Priority.Id }, null)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Priorities", new {id = @Priority.Id}, new {@class = "btn btn-danger"})
                </td>
            </tr>
        
        }
        </tbody>
    </table>
}