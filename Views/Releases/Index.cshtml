@using Planny.Controllers
@using Planny.Models
@model IEnumerable<Planny.Models.Release>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Releases</h2>

<p>
    @Html.ActionLink("New Release", "New", "Releases", null, new { @class = "btn btn-primary" })
</p>

@if (!@Model.Any())
{
<h2>No Releases.</h2>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Project</th>
        </thead>
        <tbody>
            @foreach (var Release in Model)
            {
            <tr>
                <td>
                    @*@Project.Name*@
                    @Html.ActionLink(Release.Name, "Details", "Releases", new { id = @Release.Id }, null)
                </td>
                <td>@Release.StartDate</td>
                <td>@Release.EndDate</td>
                <td>
                    @Html.ActionLink(Release.Project.Name, "Details", "Projects", new { id = @Release.ProjectId }, null)

                </td>
                <td>
                    @*@Project.Name*@
                    @Html.ActionLink("Edit", "Edit", "Releases", new { id = @Release.Id }, null)
                </td>

            </tr>

            }
        </tbody>
    </table>
}

