@using Planny.Controllers
@using Planny.Models
@model IEnumerable<Planny.Models.Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects</h2>
<p>
    @Html.ActionLink("New Project", "New", "Projects", null, new { @class = "btn btn-primary"})
</p>
@if (!@Model.Any())
{
    <h2>No projects.</h2>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <th>Name</th>
        </thead>
        <tbody>
        @foreach(var Project in Model)
    {
            <tr>
                <td>
                    @*@Project.Name*@
                    @Html.ActionLink(@Project.Name, "Details", "Projects", new { id = @Project.Id }, null)
                </td>
                <td>
                    @*@Project.Name*@
                    @Html.ActionLink("Edit", "Edit", "Projects", new { id = @Project.Id }, null)
                </td>
            </tr>
        
    }
        </tbody>
    </table>
}



