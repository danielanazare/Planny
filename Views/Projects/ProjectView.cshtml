@model Planny.ViewModel.ProjectViewModel
@{
    ViewBag.Title = "ProjectView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project: @Model.Project.Name</h2>

<h3>Releases:</h3>

<p>
    @Html.ActionLink("New Release", "New2", "Releases", new {projectId = @Model.Project.Id}, new { @class = "btn btn-success" })
</p>

@if (@Model.Releases.Count() == 0)
{
    <h2>No Releases.</h2>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        </thead>
        <tbody>
        @foreach (var Release in @Model.Releases)
        {
            <tr>
                <td>
                    @*@Project.Name*@
                    @Html.ActionLink(Release.Name, "Details", "Releases", new { id = @Release.Id }, null)
                </td>
                <td>@Release.StartDate</td>
                <td>@Release.EndDate</td>
                <td>
                    @*@Project.Name*@
                    @Html.ActionLink("Edit", "Edit", "Releases", new { id = @Release.Id }, null)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Releases", new { id = @Release.Id }, new { @class = "btn btn-danger" })
                </td>

            </tr>

        }
        </tbody>
    </table>
}