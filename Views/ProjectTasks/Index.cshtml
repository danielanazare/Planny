@using Planny.Controllers
@using Planny.Models
@model IEnumerable<Planny.Models.ProjectTask>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tasks</h2>

@if (!@Model.Any())
{
    <h2>No Tasks.</h2>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <th>Name</th>
        <th>Status</th>
        <th>User Journey</th>
        </thead>
        <tbody>
        @foreach(var Task in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@Task.Id + " " + @Task.Name, "Details", "ProjectTasks", new {id = @Task.Id}, null)
                </td>
                <td>@Task.Status</td>
                <td>
                    @Html.ActionLink(@Task.UserJourney.Name, "Details", "UserJourneys", new { id = @Task.UserJourneyId}, null)
                </td>
                
            </tr>
        
        }
        </tbody>
    </table>
}